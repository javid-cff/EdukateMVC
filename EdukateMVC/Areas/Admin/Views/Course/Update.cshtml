@model CourseUpdateVM



<div class="container">
    <div class="row">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <br />
            <div><h1>Edit Course</h1></div>

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input asp-for="Title" class="form-control" id="exampleFormControlInput1" placeholder="fullname">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Rating</label>
                <input asp-for="Rating" class="form-control" id="exampleFormControlInput1" placeholder="rating(0-5)">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Review</label>
                <input asp-for="Review" class="form-control" id="exampleFormControlInput1" placeholder="review">
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleFormControlSelect1">Select Teacher</label>
                <select asp-for="TeacherId" class="form-control" id="exampleFormControlSelect1" asp-items="@ViewBag.Teachers">
                    <option value="" selected disabled hidden>--- Select Teacher ---</option>
                </select>
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Image</label>
                <input asp-for="Image" type="file" class="form-control" id="exampleFormControlInput1" placeholder="image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>

            <div class="form-group">
                <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>