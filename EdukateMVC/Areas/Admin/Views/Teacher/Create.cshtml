@model TeacherVM



<div class="container">
	<div class="row">
        <form asp-action="Create" method="post">
            <br />
            <div><h1>Add new Teacher</h1></div>

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Teacher fullname</label>
                <input asp-for="FullName" class="form-control" id="exampleFormControlInput1" placeholder="fullname">
                <span asp-validation-for="FullName" class="text-danger" ></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>

            <div class="form-group">
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
	</div>
</div>